<Window x:Class="InitialProject.View.TourLiveTrackingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="TourLiveTrackingView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0"  x:Name="keyPointsDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Country" Binding="{Binding Location.Country}"/>
                <DataGridTextColumn Header="City" Binding="{Binding Location.City}"/>
                <DataGridTextColumn Header="Place" Binding="{Binding Attraction}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Click="StopTourClick" Content="Stop Tour" HorizontalAlignment="Left" Margin="78,35,0,0" Grid.Row="1" VerticalAlignment="Top" Height="33" Width="59"/>



    </Grid>
</Window>
