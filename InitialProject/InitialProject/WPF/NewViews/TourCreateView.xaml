<UserControl x:Class="InitialProject.WPF.NewViews.TourCreateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:InitialProject.WPF.NewViews" 
        xmlns:i="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Width="380">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Height="30">Name</Label>
            <Label Grid.Row="1" Grid.Column="0" Height="30">Location</Label>
            <Label Grid.Row="3" Grid.Column="0" Height="30">Description</Label>
            <Label Grid.Row="4" Grid.Column="0" Height="30">Language</Label>
            <Label Grid.Row="5" Grid.Column="0" Height="30">Guest capicity</Label>
            <Label Grid.Row="6" Grid.Column="0" Height="30">Date and time</Label>
            <Label Grid.Row="7" Grid.Column="0" Height="30">Duration</Label>
            <Label Grid.Row="8" Grid.Column="0" Height="30">Image</Label>
            <Label Grid.Row="2" Grid.Column="0" Height="30">Key Points</Label>

            <TextBox Grid.Row="0" Grid.Column="1" Height="20" Text="{Binding Path=TourName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" Grid.Row="1" Grid.Column="1" Height="20" Width="106" IsEditable="True" HorizontalAlignment="Left" Text="{Binding Path=Country, UpdateSourceTrigger=PropertyChanged}" Margin="0,19,0,18">

            </ComboBox>
            <ComboBox ItemsSource="{Binding Cities}"  SelectedItem="{Binding SelectedCity}" Grid.Row="1" Grid.Column="1" Height="20" Width="105" IsEditable="True" HorizontalAlignment="Left"  Margin="125,19,0,18" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" ></ComboBox>
            <TextBox Grid.Row="3" Grid.Column="1" Height="20" Text="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <ComboBox Grid.Row="4" Grid.Column="1" Height="20" Text="{Binding Path=LanguageType, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem>English</ComboBoxItem>
                <ComboBoxItem>Serbian</ComboBoxItem>
            </ComboBox>
            <xctk:DateTimePicker Height="20" Grid.Row="6" Grid.Column="1" Margin="0,18,0,19" x:Name="dateTimePicker"/>
            <TextBox Grid.Row="5" Grid.Column="1" Height="20" Text="{Binding Path=MaximumGuests,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBox Grid.Row="7" Grid.Column="1" Height="20" Text="{Binding Path=Duration, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBox Grid.Row="8" Grid.Column="1" Height="20" Text="{Binding Path=PictureUrl, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <ComboBox ItemsSource="{Binding KeyPointCities}" SelectedItem="{Binding SelectedKeyPointCity}" IsEditable="True" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="90" Height="18"/>
            <ComboBox ItemsSource="{Binding KeyPointPlaces}" SelectedItem="{Binding SelectedKeyPointPlace}" IsEditable="True" Grid.Column="1" HorizontalAlignment="Left" Margin="94,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="84" Height="20"/>
            <Button Command="{Binding AddKeyPointCommand}" Grid.Column="1" Content="+" HorizontalAlignment="Left" Margin="210,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="19" Width="20"  RenderTransformOrigin="1.59,0.545"/>


        </Grid>
        <WrapPanel Grid.Row="1" FlowDirection="RightToLeft">
            <Button IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="20, 5, 20, 5" Content="Cancel" Command="{Binding CancelCommand}"></Button>
            <Button IsDefault="True" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="20, 5, 20, 5" Content="Confirm" Command="{Binding ConfirmCommand}" ></Button>
        </WrapPanel>
    </Grid>
</UserControl>
