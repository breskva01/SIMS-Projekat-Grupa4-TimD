<UserControl x:Class="InitialProject.WPF.NewViews.GuestOne.AccommodationRatingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontFamily="Segoe UI">
    <TabControl
        FontSize="14"
        SelectedIndex="{Binding SelectedTab, UpdateSourceTrigger=PropertyChanged}"
        Margin="0 10 0 0">
        <TabItem Header="{local:Loc UnratedAccommodations}">
            <ContentControl
                MaxWidth="1000"
                Content="{Binding UnratedAccommodationsViewModel}" />
        </TabItem>
        <TabItem Header="{local:Loc ReceivedRatings}">
            <ContentControl
                MaxWidth="1000"
                Content="{Binding ReceivedRatingsViewModel}" />
        </TabItem>
        
    </TabControl>
    
</UserControl>
