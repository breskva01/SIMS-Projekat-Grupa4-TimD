<UserControl x:Class="InitialProject.WPF.NewViews.GuestOne.LayoutPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject.WPF.NewViews.GuestOne"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontFamily="Segoe UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ContentControl
            Grid.Row="0"
            MaxWidth="1000"
            Content="{Binding NavigationBarViewModel}" />

        <ContentControl
            Grid.Row="1"
            MaxWidth="1000"
            Content="{Binding ContentViewModel}" />

        <ContentControl
            Grid.Row="2"
            MaxWidth="1000"
            Content="{Binding StatusBarViewModel}" />

    </Grid>
</UserControl>
