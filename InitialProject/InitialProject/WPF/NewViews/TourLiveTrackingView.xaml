<UserControl x:Class="InitialProject.WPF.NewViews.TourLiveTrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject.WPF.NewViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Height="300" Width="700" ItemsSource="{Binding KeyPointsFromSelectedTour}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedKeyPoint}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Country" Binding="{Binding Location.Country}"/>
                <DataGridTextColumn Header="City" Binding="{Binding Location.City}"/>
                <DataGridTextColumn Header="Place" Binding="{Binding Place}"/>
                <DataGridCheckBoxColumn Header="Is Reached" Binding="{Binding IsReached}"  />
            </DataGrid.Columns>
        </DataGrid>
        <Button Command="{Binding KeyPointReachedCommand}" Content="Reached" HorizontalAlignment="Left" Margin="652,406,0,0" VerticalAlignment="Top" Height="30" Width="69"/>
        <Button Command="{Binding StopTourCommand}"  Content="Stop Tour" HorizontalAlignment="Left" Margin="106,406,0,0" VerticalAlignment="Top" Height="30" Width="63"/>
    </Grid>
</UserControl>
